<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Consigned Move List View -->
    <record id="view_consigned_move_list" model="ir.ui.view">
        <field name="name">consigned.move.list</field>
        <field name="model">consigned.move</field>
        <field name="arch" type="xml">
            <list string="Consigned Moves">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="type"/>
                <field name="quantity"/>
            </list>
        </field>
    </record>

    <!-- Consigned Move Form View -->
    <record id="view_consigned_move_form" model="ir.ui.view">
        <field name="name">consigned.move.form</field>
        <field name="model">consigned.move</field>
        <field name="arch" type="xml">
            <form string="Consigned Move">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="type"/>
                            <field name="quantity"/>
                            <field name="order_id"/>
                            <field name="related_order_line_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Move Lines">
                            <field name="move_line_ids">
                                <list editable="bottom">
                                    <field name="lot_id"/>
                                    <field name="row"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Consigned Move Action -->
    <record id="action_consigned_move" model="ir.actions.act_window">
        <field name="name">Consigned Moves</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">consigned.move</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo> 