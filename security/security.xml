<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Category for all consignment groups -->
        <record id="module_category_sale_consignment" model="ir.module.category">
            <field name="name">Sale Consignment</field>
            <field name="description">Manage consignment sales operations</field>
            <field name="sequence">20</field>
        </record>

        <!-- User Group -->
        <record id="group_sale_consignment_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_sale_consignment"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Manager Group -->
        <record id="group_sale_consignment_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_sale_consignment"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_consignment_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo> 