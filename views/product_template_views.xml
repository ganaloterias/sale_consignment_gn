<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Template Form View -->
    <record id="product_template_form_view_consignment" model="ir.ui.view">
        <field name="name">product.template.form.consignment</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='general_information']" position="inside">
                <group name="consignment" string="Consignment">
                    <field name="can_be_consigned"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo> 