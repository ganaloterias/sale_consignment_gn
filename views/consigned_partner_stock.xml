<odoo>
  <!-- Consigned Partner Stock action -->
  <record id="action_consigned_partner_stock" model="ir.actions.act_window">
    <field name="name">Consigned Partner Stock</field>
    <field name="res_model">consigned.partner.stock</field>
    <field name="view_mode">list,form</field>
    <field name="context">{'search_default_group_by_partner_id': 1}</field>
  </record>

  <!-- Consigned Partner Stock List -->
  <record id="view_consigned_partner_stock_list" model="ir.ui.view">
    <field name="name">consigned.partner.stock.lists</field>
    <field name="model">consigned.partner.stock</field>
    <field name="arch" type="xml">
      <list>
        <field name="product_product_id"/>
        <field name="product_template_id"/>
        <field name="partner_id"/>
        <field name="quantity"/>
        <field name="company_id"/> 
      </list>
    </field>
  </record>

  <!-- Consigned Partner Stock search -->
  <record id="view_consigned_partner_stock_search" model="ir.ui.view">
    <field name="name">consigned.partner.stock.search</field>
    <field name="model">consigned.partner.stock</field>
    <field name="arch" type="xml">
      <search>
        <field name="product_product_id"/>
        <field name="product_template_id"/>
        <field name="partner_id"/>
        <field name="quantity"/>
        <field name="company_id"/>

        <separator/>
        <group expand="0" string="Group By">
          <filter name="group_by_product_product_id" string="Product" context="{'group_by':'product_product_id'}" />
          <filter name="group_by_product_template_id" string="Product Template" context="{'group_by':'product_template_id'}" />
          <filter name="group_by_partner_id" string="Partner" context="{'group_by':'partner_id'}" />
          <filter name="group_by_company_id" string="Company" context="{'group_by':'company_id'}" />
        </group>
      </search>
    </field>
  </record>
</odoo>