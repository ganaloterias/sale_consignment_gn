<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Consigned Order List View -->
    <record id="view_consigned_order_list" model="ir.ui.view">
        <field name="name">consigned.order.list</field>
        <field name="model">consigned.order</field>
        <field name="arch" type="xml">
            <list string="Consigned Orders">
                <field name="name"/>
                <field name="create_date"/>
                <field name="partner_id"/>
                <field name="create_uid" widget="many2one_avatar_user"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
                <field name="currency_id" string="Moneda" invisible="1"/>
                <field name="total_price" widget="monetary" sum="Total price"/>
                <field name="settlement_date" optional="show" widget="remaining_days" invisible="state in ('done', 'cancel')" readonly="state in ['cancel', 'done']"/>
                <field name="state" widget="badge" decoration-danger="state=='cancel'" decoration-info="state== 'pending'" decoration-muted="state == 'draft'" decoration-success="state == 'done'" decoration-warning="state not in ('draft','cancel','done','assigned')" />
            </list>
        </field>
    </record>

    <!-- Consigned Order Form View -->
    <record id="view_consigned_order_form" model="ir.ui.view">
        <field name="name">consigned.order.form</field>
        <field name="model">consigned.order</field>
        <field name="arch" type="xml">
            <form string="Consigned Order">
                <header>
                    <button class="btn btn-primary" name="action_confirm" string="Validate" type="object" groups="sale_consignment_gn.group_sale_consignment_user" invisible="state != 'draft'"/>
                    <button class="btn btn-primary" name="action_done" string="Done" type="object" icon="fa-check" groups="sale_consignment_gn.group_sale_consignment_user" invisible="state != 'confirmed'"/>
                    <button class="btn btn-primary" name="%(action_report_consignment_order_form)d" string="Print Order" type="action" groups="sale_consignment_gn.group_sale_consignment_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,confirmed,done"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button" type="object" name="action_view_pickings" icon="fa-truck">
                            <field string="Pickings" name="picking_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <label for="name" string="Reference"/>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="settlement_date" widget="remaining_days"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" optional="show"/>
                            <field name="currency_id" string="Moneda" invisible="1"/>
                            <field name="total_price" widget="monetary"/>
                            <field name="total_commission_amount" widget="monetary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids">
                                <list editable="bottom">
                                    <field name="product_id" />
                                    <field name="quantity"/>
                                    <field name="returned_quantity"/>
                                    <field name="remaining_quantity"/>
                                    <field name="commission_type" optional="hide"/>
                                    <field name="commission_value" optional="hide"/>
                                    <field name="commission_amount"/>
                                    <field name="unit_price"/>
                                    <field name="total_price"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Consigned Order Action -->
    <record id="action_consigned_order" model="ir.actions.act_window">
        <field name="name">Consigned Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">consigned.order</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo> 